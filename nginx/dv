server {
    listen 20005;
    server_name kr.dvjump.pictoplay.co.kr;

    index index.php;
    client_max_body_size 5M;
    root /home/ninja/ninja/public;    

    ssl on;
    ssl_certificate /etc/nginx/conf.d/kr.dvjump.pictoplay.co.kr_crt.pem;
    ssl_certificate_key /etc/nginx/conf.d/kr.dvjump.pictoplay.co.kr_key.pem;
    ssl_session_timeout 5m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;#SSLProtocol 설정
    ssl_ciphers ECDHE-RSA-AES128-SHA256:AES128-GCM-SHA256:!RC4:HIGH:!MD%:!aNULL:!EDH;
    ssl_prefer_server_ciphers on;#SSLCipher 설정

    location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }

    location ~ \.php$ {
        # With php7-fpm:
        try_files $uri = 404;
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        # fastcgi_read_timeout 300;
    }
}
